<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="8sp"
        android:id="@+id/channel_name"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/music_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="标题标题"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/publish_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="标题标题"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/music_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="3:56" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|" />
        <TextView
            android:id="@+id/music_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:29"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <TextView
        android:id="@+id/music_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="描述描述" />

    <Button
        android:id="@+id/music_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:drawableLeft="@drawable/baseline_favorite_black_18dp"
        android:drawableTint="#FFFFFF"
        android:elevation="8dp"
        android:text="收藏本音乐"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.5"
            android:foregroundTint="#F0000000"
            android:foregroundTintMode="multiply"
            android:tint="#00000000"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/copy_right_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yushang Music"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proudly Developed By" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text=" Haodong" />

        </LinearLayout>

        <TextView
            android:id="@+id/copy_right_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Check on Github"
            android:textAlignment="center" />

    </LinearLayout>


</LinearLayout>